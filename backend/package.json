  "main": "src/server.ts",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.10",
    "dev": "ts-node-dev --respawn --clear --transpile-only --trace-deprecation --ignore-watch node_modules src/server.ts",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --watch src src/server.ts",
    "build": "tsc",
    "prestart": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "docker:build": "docker build . -t forges-of-faith-backend",
    "docker:build:all": "docker-compose -f docker-compose-production.yml build",
    "docker:stack:up": "docker-compose -f docker-compose-production.yml up -d",
    "docker:stack:build:up": "docker-compose -f docker-compose-production.yml up -d --build",
    "docker:stack:down": "docker-compose -f docker-compose-production.yml down",
    "docker:stack:logs": "docker-compose -f docker-compose-production.yml logs -f --tail 100"
  },
