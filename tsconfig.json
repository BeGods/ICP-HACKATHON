{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "types": ["jest"],
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@models/*": [
        "./src/models/*"
      ],
      "@routes/*": [
        "src/fof/routes/*"
      ],
      "@config/*": [
        "./src/config/*"
      ]
    }
  },
  "include": ["src/**/*", "src/scripts"],

}